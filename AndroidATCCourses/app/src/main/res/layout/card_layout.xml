<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


     <android.support.v7.widget.CadView
         android:d="@+id/card_view"
         xmlns:card_view="http://scemas.anroid.om/apk/res-auto"
         android:layout_width="match_parent"
         android:layout_height="wrap_contnt"
         card_view:cardBackgroundColor="@color/color_white"
         card_view:cardCornerRadius="10dp"
         card_view:cardElevation="5dp"
         card_view:cardUseCompatPaddig="true">

         <LinearLayout
             android:ayout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <ImageView
                 android:id="@+id/imageView"
                 android:tag="image_tag"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_magin="5dp"
                 android:src="@mipmap/ic_launcher"
                 android:contentDescription="@string/androidatcimage"
                 />

             <TextView
                 android:id="@+id/textViewName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center"
                 android:text="@string/course_name"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 />
         </LinearLayout>


        </android.support.v7.widget.CadView>


</LinearLayout>